#!/bin/sh

[ -e /dev/nand0.system.ubi ] && ubidetach /dev/nand0.system

ubiformat /dev/nand0.system -y
ubiattach /dev/nand0.system
ubimkvol -t dynamic /dev/nand0.system.ubi root 62914560
ubimkvol -t dynamic /dev/nand0.system.ubi bbox 0

[ -e /dev/m25p0.system.ubi ] && ubidetach /dev/m25p0.system

ubiformat /dev/m25p0.system -y
ubiattach /dev/m25p0.system
ubimkvol -t dynamic /dev/m25p0.system.ubi kernel 0
