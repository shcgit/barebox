#!/bin/sh

# Beeper ON
gpio_direction_output 87 1

msleep 240

if [ -e /dev/fb0 ]; then
	fb0.enable=1

	# Load LOGO
	if [ -e /env/milas.png ] && splash -f /dev/fb0 /env/milas.png

	# Backlight1 PWM set to 75% and Turn ON
	i2c_write -a 0x2c -b 0 -r 0x00 0xbf
	i2c_write -a 0x2c -b 0 -r 0x01 0x05
fi

if [ -e /dev/fb1 ]; then
#	fb1.enable=1

	# Load LOGO
#	[ -e /env/milas.png ] && splash -f /dev/fb1 /env/milas.png

	# Backlight2 Enable
#	gpio_direction_output 140 1
#	msleep 4
fi

# Beeper OFF
gpio_direction_output 87 0
