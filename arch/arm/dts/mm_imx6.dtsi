#include <dt-bindings/leds/common.h>

/ {
	model = "Mega-Milas Spider i.MX6";
	compatible = "milas,spider-imx6",
		     "phytec,imx6x-pbab01", "phytec,imx6q-pfla02", "fsl,imx6q";

	chosen {
		/delete-node/ environment-nand;
		/delete-node/ environment-sd1;
		/delete-node/ environment-sd2;
		/delete-node/ environment-sd4;

		environment-spinor {
			compatible = "barebox,environment";
			device-path = &som_flash, "partname:env";
			status = "disabled";
		};

		environment-sd3 {
			compatible = "barebox,environment";
			device-path = &som_flash, "partname:env";
			status = "disabled";
		};
	};

	backlight: backlight {
		compatible = "pwm-backlight";
		pwms = <&pwm1 0 100000>;
		brightness-levels = <0 255>;
		num-interpolated-steps = <16>;
		default-brightness-level = <0>;
	};

	beeper: beeper {
		compatible = "gpio-beeper";
		gpios = <&pca9534 5 GPIO_ACTIVE_HIGH>;
	};

	clk12m: clk12m {
		compatible = "fixed-clock";
		clock-frequency = <12000000>;
		
		#clock-cells = <0>;
	};

	/delete-node/ oscillator;

	leds {
		led_brd {
			gpios = <&pca9534 6 GPIO_ACTIVE_LOW>;
			function = LED_FUNCTION_MTD;
			color = <LED_COLOR_ID_RED>;
			linux,default-trigger = LED_FUNCTION_MTD;
			default-state = "off";
		};
	};

	regulators {
		/delete-node/ regulator@2;
		/delete-node/ regulator@3;

		vdd_5v0: reg@5 {
			compatible = "regulator-fixed";
			reg = <5>;
			regulator-name = "vdd-5v0";
			regulator-min-microvolt = <5000000>;
			regulator-max-microvolt = <5000000>;
			regulator-always-on;
			regulator-boot-on;
		};

		vdd_3v3: reg@6 {
			compatible = "regulator-fixed";
			reg = <6>;
			regulator-name = "vdd-3v3";
			regulator-min-microvolt = <3300000>;
			regulator-max-microvolt = <3300000>;
			regulator-always-on;
			regulator-boot-on;
			vin-supply = <&vdd_5v0>;
		};

		vdd_1v8: reg@7 {
			compatible = "regulator-fixed";
			reg = <7>;
			regulator-name = "vdd-1v8";
			regulator-min-microvolt = <1800000>;
			regulator-max-microvolt = <1800000>;
			regulator-always-on;
			regulator-boot-on;
			vin-supply = <&vdd_3v3>;
		};
	};

	/delete-node/ sound;

	sound-pcm {
		compatible = "simple-audio-card";
		simple-audio-card,name = "SSI2AIC3104";
		simple-audio-card,format = "i2s";
		simple-audio-card,bitclock-master = <&audio_master>;
		simple-audio-card,frame-master = <&audio_master>;

		simple-audio-card,cpu {
			sound-dai = <&ssi2>;
		};

		audio_master: simple-audio-card,codec {
			sound-dai = <&tlv320aic3104>;
		};
	};

	sound-spdif {
		compatible = "fsl,imx-audio-spdif";
		model = "IMX6SPDIF";
		spdif-controller = <&spdif>;
		spdif-in;
		spdif-out;
	};
};

&asrc {
	status = "disabled";
};

&can1 {
	status = "disabled";
};

&clks {
	assigned-clocks = <&clks IMX6QDL_CLK_LDB_DI0_SEL>,
			  <&clks IMX6QDL_CLK_LDB_DI1_SEL>;
	assigned-clock-parents = <&clks IMX6QDL_CLK_PLL5_VIDEO_DIV>,
				 <&clks IMX6QDL_CLK_PLL5_VIDEO_DIV>;
};

&gpmi {
	/delete-node/ partitions;

	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		partition@0 {
			label = "system";
			reg = <0 0>;
		};
	};
};

&hdmi {
	status = "disabled";
};

&i2c1 {
	clock-frequency = <400000>;
};

&i2c2 {
	clock-frequency = <400000>;

	/delete-node/ tlv320@18;
	/delete-node/ stmpe@41;
	/delete-node/ rtc@51;
	/delete-node/ adc@64;

	tlv320aic3104: codec@18 {
		compatible = "ti,tlv320aic3104";
		reg = <0x18>;
		clocks = <&clk12m>;
		ai3x-micbias-vg = <1>;
		ai3x-ocmv = <1>;
		IOVDD-supply = <&vdd_3v3>;
		DVDD-supply = <&vdd_1v8>;
		AVDD-supply = <&vdd_3v3>;
		DRVDD-supply = <&vdd_3v3>;

		#sound-dai-cells = <0>;
	};

	pca9534: gpio@20 {
		compatible = "nxp,pca9534";
		reg = <0x20>;
		gpio-controller;
		
		#gpio-cells = <2>;
	};
};

&i2c3 {
	status = "disabled";
};

&ipu2 {
	status = "disabled";
};

&ldb {
	/* Fix incorrect LVDS clock due ERR009219 patches */
	assigned-clocks = <&clks IMX6QDL_CLK_PLL5_VIDEO>;
	assigned-clock-parents = <0>;
	assigned-clock-rates = <716800000>;

	status = "okay";

	lvds-channel@0 {
		fsl,data-mapping = "spwg";
		fsl,data-width = <18>;
		status = "okay";

		display-timings {
			native-mode = <&timing0>;

			timing0: G104XVN01_0 {
				clock-frequency = <50000000 65000000 81000000>;
				hactive = <1024>;
				vactive = <768>;
				hback-porch = <320>;
				hfront-porch = <24>;
				hsync-len = <136>;
				vback-porch = <38>;
				vfront-porch = <3>;
				vsync-len = <6>;
				de-active = <1>;
			};

			timing1: PH320240T {
				clock-frequency = <6400000>;
				hactive = <320>;
				vactive = <240>;
				hback-porch = <38>;
				hfront-porch = <20>;
				hsync-len = <30>;
				vback-porch = <15>;
				vfront-porch = <5>;
				vsync-len = <1 3 5>;
				hsync-active = <0>;
				vsync-active = <0>;
				de-active = <1>;
			};
		};
	};
};

&led_green {
	linux,default-trigger = LED_FUNCTION_HEARTBEAT;
	function = LED_FUNCTION_HEARTBEAT;
	color = <LED_COLOR_ID_GREEN>;
	default-state = "off";
	panic-indicator;
};

&led_red {
	linux,default-trigger = "usb-host";
	function = LED_FUNCTION_USB;
	color = <LED_COLOR_ID_RED>;
	default-state = "off";
};

&mipi_csi {
	status = "disabled";
};

&pcie {
	status = "disabled";
};

&pwm1 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_pwm1>;
	status = "okay";

	#pwm-cells = <2>;
};

&sata {
	status = "okay";
};

&som_flash {
	/delete-node/ partitions;

	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		partition@0 {
			label = "boot";
			reg = <0x00000 0x80000>;
		};

		partition@80000 {
			label = "env";
			reg = <0x80000 0x40000>;
		};

		partition@c0000 {
			label = "init";
			reg = <0xc0000 0>;
		};
	};
};

&spdif {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_spdif>;
	status = "okay";
};

&uart1 {
	status = "disabled";
};

&uart3 {
	status = "disabled";
};

&usbh1 {
	over-current-active-low;
};

&usbotg {
	dr_mode = "host";
	over-current-active-low;

	/delete-property/ disable-over-current;
};

&usdhc2 {
	status = "disabled";
};

&usdhc3 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_usdhc3>;
	bus-width = <1>;
	non-removable;

	/delete-property/ cd-gpios;
	/delete-property/ wp-gpios;

	/delete-node/ partition@0;
	/delete-node/ partition@e0000;
};

&wdog1 {
	timeout-sec = <10>;
};

&iomuxc {
	imx6q-phytec-pfla02 {
		pinctrl_pwm1: pwm1grp {
			fsl,pins = <
				MX6QDL_PAD_DISP0_DAT8__PWM1_OUT		0x1b0b1
			>;
		};

		pinctrl_spdif: spdifgrp {
			fsl,pins = <
				MX6QDL_PAD_ENET_RXD0__SPDIF_OUT		0x1b0b0
				MX6QDL_PAD_GPIO_16__SPDIF_IN		0x1b0b0
			>;
		};

		pinctrl_usbh1: usbh1grp {
			fsl,pins = <
				MX6QDL_PAD_GPIO_0__GPIO1_IO00		0x130b0
				MX6QDL_PAD_GPIO_3__USB_H1_OC		0x1b0b0
			>;
		};

		pinctrl_usbotg: usbotggrp {
			fsl,pins = <
				MX6QDL_PAD_KEY_ROW4__GPIO4_IO15		0x130b0
				MX6QDL_PAD_GPIO_1__USB_OTG_ID		0x17059
				MX6QDL_PAD_KEY_COL4__USB_OTG_OC		0x1b0b0
			>;
		};

		pinctrl_usdhc3: usdhc3grp {
			fsl,pins = <
				MX6QDL_PAD_SD3_CMD__SD3_CMD		0x17059
				MX6QDL_PAD_SD3_CLK__SD3_CLK		0x10059
				MX6QDL_PAD_SD3_DAT0__SD3_DATA0		0x17059
			>;
		};
	};
};
