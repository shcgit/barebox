/dts-v1/;

/ {
	model = "Sandbox";
	compatible = "barebox,sandbox";

	#address-cells = <2>;
	#size-cells = <2>;

	aliases {
		bmode = &bmode;
		state = &state;
	};

	chosen {
		environment {
			compatible = "barebox,environment";
			device-path = &part_env;
		};
	};

	memory {
		device_type = "memory";
		reg = <0 0 0 0>;
	};

	state: state {
		magic = <0xaa3b86a6>;
		compatible = "barebox,state";
		backend-type = "raw";
		backend = <&part_state>;
		backend-storage-type = "direct";
		backend-stridesize = <64>;

		#address-cells = <1>;
		#size-cells = <1>;

		vars {
			#address-cells = <1>;
			#size-cells = <1>;

			x {
				reg = <0x0 0x4>;
				type = "uint32";
				default = <1>;
			};

			y {
				reg = <0x4 0x4>;
				type = "uint32";
				default = <3>;
			};
		};
	};

	stickypage: stickypage {
		compatible = "barebox,hostfile", "syscon", "simple-mfd";
		reg = <0 0 0 4096>;
		barebox,cdev; /* no caching allowed */

		bmode: reboot-mode {
			compatible = "syscon-reboot-mode";
			offset = <0>;
			mask = <0xffffff00>;
			mode-normal = <0x00000000>;
			mode-loader = <0xbbbbbb00>;
		};

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			/* 0x00+4 reserved for syscon use */

			part_env: env@400 {
				reg = <0x400 0x800>;
				label = "env";
			};

			part_state: state@800 {
				reg = <0xC00 0x400>;
				label = "state";
			};
		};
	};

	power {
		compatible = "barebox,sandbox-power";
		barebox,reset-source = <&stickypage 0>;
	};

	watchdog {
		compatible = "barebox,sandbox-watchdog";
		barebox,reset-source = <&stickypage 0>;
	};
};
